<Window x:Class="Hospital.RoomOptions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital"
        mc:Ignorable="d"
        Title="RoomOptions" Height="450" Width="800">
    <Grid>
        <Button Content="Create Room" HorizontalAlignment="Left" Height="48" Margin="66,23,0,0" VerticalAlignment="Top" Click="createRooms" Width="88"/>
        <DataGrid HorizontalAlignment="Left" Height="186" Margin="66,0,0,0" SelectionMode="Single" VerticalAlignment="Center" ItemsSource="{Binding Room}" IsReadOnly="True" Width="433" RenderTransformOrigin="0.5,0.5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding id}"/>
                <DataGridTextColumn Header="Name" Binding="{Binding name}"/>
                <DataGridTextColumn Header="Floor" Binding="{Binding floor}"/>
                <DataGridTextColumn Header="Detail" Binding="{Binding detail}" Width="120"/>
                <DataGridTextColumn Header="Type" Binding="{Binding type}" Width="120"/>
                <DataGridTextColumn Header="Update" />
                <DataGridTextColumn Header="Delete" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
