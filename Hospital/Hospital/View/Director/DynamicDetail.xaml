<Window x:Class="Hospital.View.Director.DynamicDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital.View.Director"
        mc:Ignorable="d"
        Title="DynamicDetail" Height="750" Width="430">
    <Grid Background="#81c1b0">
        <Label Content="Detalji opreme" HorizontalAlignment="Center" Margin="0,63,0,0" FontSize="20" VerticalAlignment="Top"/>
        <Label Content="Ime: " HorizontalAlignment="Left" Margin="162,196,0,0" FontSize="16" VerticalAlignment="Top"/>
        <Label Content="Količina: " HorizontalAlignment="Left" Margin="161,260,0,0" FontSize="16" VerticalAlignment="Top"/>
        <Label Content="Opis: " HorizontalAlignment="Left" Margin="164,325,0,0" FontSize="16" VerticalAlignment="Top" RenderTransformOrigin="0.389,-0.25"/>
        <Label x:Name="ime" Content="" HorizontalAlignment="Left" Margin="172,226,0,0" FontSize="14" VerticalAlignment="Top"/>
        <Label x:Name="kolicina" Content="" HorizontalAlignment="Left" Margin="172,291,0,0" FontSize="14" VerticalAlignment="Top"/>
        <Label x:Name="opis" Content="" HorizontalAlignment="Left" Margin="172,0,0,0" FontSize="14" VerticalAlignment="Center"/>
        <Button x:Name="deleteButton" HorizontalAlignment="Left" Margin="358,66,0,0" VerticalAlignment="Top" Click="Delete_Click"  Width="40">
            <Image Stretch="Fill" Source="/Images/bin.png" Height="35" Width="35"/>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="25"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button HorizontalAlignment="Left" Margin="356,10,0,0" Click="Back_Click" VerticalAlignment="Top">
            <Image Stretch="Fill" Source="/Images/back.png" Height="26" Width="25"/>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="25"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="updateButton" HorizontalAlignment="Left" Height="39" Margin="38,66,0,0" VerticalAlignment="Top" Width="40" Click="ShowUpdate_Click">
            <Image Stretch="Fill" Source="/Images/edit.png" Height="35" Width="35" />
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="25"/>
                </Style>
            </Button.Resources>
        </Button>
        <TextBox x:Name="updateName" HorizontalAlignment="Center" Margin="0,229,0,0" Text=""  Visibility="Collapsed" TextWrapping="Wrap" VerticalAlignment="Top"  Width="106" Height="23"/>
        <TextBox x:Name="updateQuantity" HorizontalAlignment="Center" Margin="0,291,0,0" Text="" Visibility="Collapsed"  TextWrapping="Wrap" VerticalAlignment="Top"  Width="106" Height="23"/>
        <TextBox x:Name="updateDescription" HorizontalAlignment="Center" Text="" Visibility="Collapsed" TextWrapping="Wrap" VerticalAlignment="Center"  Width="106" Height="23"/>
        <Button x:Name="prihvatiButton" Content="Prihvati" HorizontalAlignment="Left" Margin="328,676,0,0" VerticalAlignment="Top" Height="34" Visibility="Collapsed" Width="61" Click="Prihvati_Click"/>
        <Button x:Name="odustaniButton" Content="Odustani" HorizontalAlignment="Left" Margin="47,676,0,0" VerticalAlignment="Top" Height="34" Visibility="Collapsed" Width="61" Click="Ponisti_Click" />
        <Label x:Name="nameError" Content="" HorizontalAlignment="Left" Foreground="Red" Margin="192,242,0,0" VerticalAlignment="Top"/>
        <Label x:Name="quaError" Content="" HorizontalAlignment="Left" Foreground="Red" Margin="192,305,0,0" VerticalAlignment="Top"/>
        <Label x:Name="descError" Content="" HorizontalAlignment="Left" Foreground="Red" Margin="192,370,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
