        </Button>
        <Label Content="Ime" HorizontalAlignment="Left" Margin="157,190,0,0" FontSize="16" VerticalAlignment="Top"/>
        <Label x:Name="description" Content="" HorizontalAlignment="Left" Margin="165,280,0,0" FontSize="16" VerticalAlignment="Top"/>
