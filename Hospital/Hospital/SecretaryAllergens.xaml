<Window x:Class="Hospital.SecretaryAllergens"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital"
        mc:Ignorable="d"
        Title="SecretaryAllergens" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="secretaryAllergensDataGrid"
              AutoGenerateColumns="False"
              IsReadOnly="True" Margin="209,41,352,234">
            <DataGrid.Columns>
                <DataGridTextColumn Header="JMBG"
                            Binding="{Binding User.Jmbg}" />
                <DataGridTextColumn Header="Name"
                            Binding="{Binding User.FirstName }" />
                <DataGridTextColumn Header="Last Name"
                            Binding="{Binding User.LastName }" />
                <DataGridTextColumn Header="Allergens"
                            Binding="{Binding Patient.User.MedicalRecord.Alergies }" />
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Back" HorizontalAlignment="Left" Margin="33,27,0,0" VerticalAlignment="Top" Height="32" Width="135"/>
        <Button Content="Show" HorizontalAlignment="Center" Margin="0,224,0,0" VerticalAlignment="Top" Click="Show_Click"/>

    </Grid>
</Window>
