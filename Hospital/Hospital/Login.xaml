<Window x:Class="Hospital.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital"
        mc:Ignorable="d"
        Title="Login" Height="700" Width="450">
    <Grid>
        <Label Content="Username" HorizontalAlignment="Center" Margin="0,321,0,0" VerticalAlignment="Top" Foreground="White" FontSize="15"/>
        <Label Content="Password" HorizontalAlignment="Center" Margin="0,386,0,0" VerticalAlignment="Top" Foreground="White" FontSize="15"/>
        <TextBox x:Name="userName" HorizontalAlignment="Center" Margin="0,295,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Background="White" BorderBrush="Black"/>
        <PasswordBox x:Name="password" HorizontalAlignment="Center" Margin="0,363,0,0" VerticalAlignment="Top" Width="120" BorderBrush="Black"/>
        <Button Content="Login" HorizontalAlignment="Center" Margin="0,451,0,0" VerticalAlignment="Top" Height="37" Width="94" Click="Button_Click" BorderBrush="Black" FontSize="15"/>
        <Label Content="Login" HorizontalAlignment="Center" Margin="0,94,0,0" FontSize="20" VerticalAlignment="Top"/>
    </Grid>
</Window>
