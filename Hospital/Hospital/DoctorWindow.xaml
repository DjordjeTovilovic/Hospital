<Window x:Class="Hospital.DoctorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital"
        mc:Ignorable="d"
        Title="DoctorWindow" Height="450" Width="800">
    <Grid>
        <ListView x:Name="lv_appointments" HorizontalAlignment="Left" Height="284" Margin="33,36,0,0" VerticalAlignment="Top" Width="312">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <WrapPanel>
                        <TextBlock Text="id: " />
                        <TextBlock Text="{Binding Id}" FontWeight="Bold"  TextDecorations="Underline" Foreground="Blue" Cursor="Hand" />
                        <TextBlock Text=", " />
                        <TextBlock Text="Pocetak termina: " FontWeight="Bold" />
                        <TextBlock Text="{Binding StartTime}"  />
                        <TextBlock Text="Trajanje: " FontWeight="Bold" />
                        <TextBlock Text="{Binding DurationInMinutes}" />
                    </WrapPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <DatePicker x:Name="start_date" HorizontalAlignment="Left" Margin="33,370,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="end_date" HorizontalAlignment="Left" Margin="189,370,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="129,13,0,0" Text="Appointments" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Margin="33,338,0,0" Text="Start date" TextWrapping="Wrap" VerticalAlignment="Top" Width="79" Height="18"/>
        <TextBox HorizontalAlignment="Left" Margin="189,338,0,0" Text="End date" TextWrapping="Wrap" VerticalAlignment="Top" Width="79" Height="18"/>
    </Grid>
</Window>
